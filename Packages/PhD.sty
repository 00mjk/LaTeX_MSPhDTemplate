%
% PhD.sty
% Style file to set up title and signature pages for PhD dissertation.
% Do not edit this file unless there is an absolute need, and/or in the
% absence of knowledge of LaTeX style files.

%
% Title page
\def\titlepage{%
  \sloppy
  \pagenumbering{roman}
  \pagestyle{plain}
  \thispagestyle{empty}%
  \null\vskip.50in%

  \begin{center}
    \uppercase\expandafter{\@title}
  \end{center}

  \vfill
  \begin{center}
    By\\
    \expandafter{\@author}
  \end{center}

  \vspace{\fill}
  \begin{center}
    A DISSERTATION\\
    Submitted in partial fulfillment of the requirements for the degree of\\
    DOCTOR OF PHILOSOPHY\\
    \ifx \@program \@empty
      \ifx \@department \@empty 
        In \expandafter{\@school}
      \else
        In \expandafter{\@department}
      \fi
    \else
      In \expandafter{\@program}
    \fi
  \end{center}

  \begin{center}
    \uppercase\expandafter{\@university}\\
    \@year
  \end{center}

  \vfill
  \begin{center}
    \copyright\ \@year\ \@author\
  \end{center}
  \newpage
}

%
% Signature page
\def\signaturepage{%
  \cleartooddpage[\thispagestyle{empty}]
  \thispagestyle{empty}%
  This dissertation has been approved in partial fulfillment of the
  requirements for the Degree of DOCTOR OF PHILOSOPHY in
  \ifx \@program \@empty
    \ifx \@department \@empty 
      \expandafter{\@school}.
    \else
      \expandafter{\@department}.
    \fi
  \else
    \expandafter{\@program}.
  \fi

  \vskip 0.50in
  \begin{flushright}
    \setstretch{1.00}%
    \ifx \@program \@empty
      \ifx \@department \@empty 
        \expandafter{\@school}
      \else
        Department of \expandafter{\@department}
      \fi
    \else
      PROGRAM: \expandafter{\@program}
    \fi
  \end{flushright}

  \hspace{0.68in} %
  \begin{tabular}{rl}%
    \ifx \@coadvisor \@empty 
      Dissertation Advisor: & \hspace{0.10in}\expandafter{\@primaryadvisor}\\\\
    \else
      Dissertation Co-advisor: & \hspace{0.10in}\expandafter{\@primaryadvisor}\\\\
      Dissertation Co-advisor: & \hspace{0.10in}\expandafter{\@coadvisor}\\\\
    \fi

    \ifx \@advcommone \@empty \else
      Committee Member:  & \hspace{0.10in}\expandafter{\@advcommone}\\\\
    \fi

    \ifx \@advcommtwo \@empty \else
      Committee Member:  & \hspace{0.10in}\expandafter{\@advcommtwo}\\\\
    \fi

    \ifx \@advcommthree \@empty \else
      Committee Member:  & \hspace{0.10in}\expandafter{\@advcommthree}\\\\
    \fi

    \ifx \@advcommfour \@empty \else
      Committee Member: & \hspace{0.10in}\expandafter{\@advcommfour}\\\\ 
    \fi

    \ifx \@departmentchair \@empty 
      School Dean: & \hspace{0.10in}\expandafter{\@schooldean}\\\\
    \else
      Department Chair: & \hspace{0.10in}\expandafter{\@departmentchair}\\\\
    \fi

  \end{tabular}%
  \renewcommand{\baselinestretch}{\lineheight}%
  \newpage
}
